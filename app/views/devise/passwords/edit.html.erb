<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t('devise.passwords.edit.title') %></div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: t('devise.passwords.edit.new_password'), required: true, autofocus: true, hint: (t('devise.passwords.edit.new_password_hint', minimum: @minimum_password_length) if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: t('devise.passwords.edit.confirm_new_password'), required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t('devise.passwords.edit.submit'), class: 'btn-primary btn-block' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
