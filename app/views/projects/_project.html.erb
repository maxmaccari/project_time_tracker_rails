<h1><%= project.title + (project.active? ? '' : " (Inactive)") %></h1>

<div class="panel panel-default">
  <div class="panel-heading"><%= Project.human_attribute_name(:description) %></div>
  <div class="panel-body">
    <div class="description"><%= project.description %></div>
    <% if project.initial_date.present? %>
      <div class="initial-date">
      <strong><%= Project.human_attribute_name(:initial_date) %>:</strong> <%= l project.initial_date %></div>
    <% end %>
    <% if project.final_date.present? %>
      <div class="final-date">
      <strong><%= Project.human_attribute_name(:final_date) %>:</strong> <%= l project.final_date %></div>
    <% end %>

    <div class="project-estimatives">
      <% if project.estimated_time.present? %>
        <strong><%= Project.human_attribute_name(:estimated_time) %>:</strong> <%= project.estimated_time %>h<br>
      <% end %>
      <% if project.time_value.present? %>
        <strong><%= Project.human_attribute_name(:time_value) %>:</strong> <%= number_to_currency project.time_value %><br>
      <% end %>
      <% if project.estimated_value.present? %>
        <strong><%= Project.human_attribute_name(:estimated_value) %>:</strong> <%= number_to_currency project.estimated_value %><br>
      <% end %>
    </div>

    <div class="total">
      <strong><%= Project.human_attribute_name(:total_time) %>:</strong> <%= project.total_time %><br>
      <% if project.total_value.present? %>
        <strong><%= Project.human_attribute_name(:total_value) %>:</strong> <%= number_to_currency project.total_value %><br>
      <% end %>
    </div>

    <% if project.parent.present? %>
    <div class="parent">
      <strong><%= Project.human_attribute_name(:parent) %>:</strong>
      <%= link_to project.parent, project.parent if @project.parent %>
    </div>
    <% end %>
  </div>
</div>
<p></p>
