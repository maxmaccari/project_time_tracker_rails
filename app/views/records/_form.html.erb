<%= simple_form_for(@record, url: @record.new_record? ? project_records_path(@project) : project_record_path(@project, @record)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type,
      collection: Record.types.map { |type| [Record.human_type_value(type), type] },
      as: :radio_buttons %>

    <%= f.input :date %>
    <%= f.input :description %>

    <%= f.input :initial_hour, wrapper_html: {class: 'time_record_field'} %>
    <%= f.input :initial_minute, wrapper_html: {class: 'time_record_field'} %>
    <%= f.input :final_hour, wrapper_html: {class: 'time_record_field'} %>
    <%= f.input :final_minute, wrapper_html: {class: 'time_record_field'} %>

    <%= f.input :hours, wrapper_html: {class: 'amount_record_field'} %>
    <%= f.input :minutes, wrapper_html: {class: 'amount_record_field'} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
