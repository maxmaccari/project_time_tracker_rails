<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Hours</th>
      <th>Minutes</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% records.each do |record| %>
      <tr>
        <td><%= l record.date %></td>
        <td><%= record.description %></td>
        <td><%= record.hours %></td>
        <td><%= record.minutes %></td>
        <td><%= record.type %></td>
        <td><%= link_to 'Show', project_record_path(@project, record) %></td>
        <td><%= link_to 'Edit', edit_project_record_path(@project, record) %></td>
        <td><%= link_to 'Destroy', project_record_path(@project, record), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
